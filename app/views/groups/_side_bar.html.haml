.side-chat
  .side-chat__side-header
    .side-chat__side-box
      .side-box__username
        = current_user.name
      %ul.side-box_btn
        %li.list
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'new-group')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'edit-group')
  .side-chat__group-list
    - current_user.groups.each do |group|
      .side-chat__groups
        = link_to group_messages_path(group) do
          .side-chat__group-name
            = group.name
          .side-chat__latest-message
            = group.show_last_message